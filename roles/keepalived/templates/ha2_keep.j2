vrrp_instance VI_EXT {
    interface enp0s10
    state BACKUP
    virtual_router_id 50
    priority 100
    advert_int 1

    unicast_src_ip 192.168.56.11  # IP of this server
    unicast_peer {
        192.168.56.10  # IP of the master server
    }

    virtual_ipaddress {
        192.168.56.20  # The floating IP
    }
}

